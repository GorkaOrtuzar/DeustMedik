<?xml version="1.0" encoding="UTF-8"?>

<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">  
         <modelVersion>4.0.0</modelVersion>

  <groupId>com.myHospital.app</groupId>
  <artifactId>DeustMedik</artifactId>
  <version>1.0-SNAPSHOT</version>

  <name>DeustMedik</name>
  <url>http://www.example.com</url>

  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <!-- starting from JDK 9 is better to use the release property as it checks
      if we are using API libraries that are no available in the specified version -->
    <maven.compiler.release>17</maven.compiler.release>
  </properties>

  <dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.13.2</version>
      <scope>test</scope>
    </dependency>
      
    <!-- Dependencia para MySQL -->
    <dependency>
      <groupId>mysql</groupId>
      <artifactId>mysql-connector-java</artifactId>
      <version>8.0.28</version> <!-- Usa la última versión -->
    </dependency>

    <dependency>
      <groupId>jakarta.persistence</groupId>
      <artifactId>jakarta.persistence-api</artifactId>
      <version>3.1.0</version>
      <scope>provided</scope>
    </dependency>
    
    <dependency>
      <groupId>org.springframework.boot</groupId>
      <artifactId>spring-boot-starter-data-jpa</artifactId>
      <version>3.2.0</version> <!-- Cambia esto por la última versión estable -->
    </dependency>
  </dependencies>

  <build>
    <!-- the default section generated by the quickstart archetype has been modified to include specifics plugins -->
    <plugins>
      <!-- included to overwrite the default version of the maven-compiler-plugin used by maven -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.10.1</version>
      </plugin>
    </plugins>
    <!-- added to configure maven to filter the properties included in the resource directory and
      substitute them with the corresponding -->
    <resources>
      <resource>
        <directory>src/main/resources</directory>
        <filtering>true</filtering>
        <excludes>
          <exclude>**/*.db</exclude>
          <exclude>**/*.jpg</exclude>
          <exclude>**/*.png</exclude>
          <exclude>**/*.gif</exclude>
          <!-- Agrega otros formatos binarios si es necesario -->
        </excludes>
      </resource>
      <resource>
        <directory>src/main/resources</directory>
        <filtering>false</filtering>
        <includes>
          <include>**/*.db</include>
          <include>**/*.jpg</include>
          <include>**/*.png</include>
          <include>**/*.gif</include>
          <!-- Incluye los mismos formatos que excluiste arriba -->
        </includes>
      </resource>
    </resources>
  </build>
</project>